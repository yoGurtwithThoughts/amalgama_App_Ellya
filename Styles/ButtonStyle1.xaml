<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Name="Button1" x:Key="ButttonSt1" TargetType="Button"
           BasedOn="{StaticResource MaterialDesignElevatedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#870000" Offset="0"/>
                    <GradientStop Color="#5F0000" Offset="1.1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="115"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00000040" 
                                      BlurRadius="10" 
                                      ShadowDepth="3" 
                                      Opacity="0.25"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="{StaticResource MyCustomFont}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
</ResourceDictionary>